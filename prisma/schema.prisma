datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // URL de tu base de datos PostgreSQL
}

generator client {
  provider = "prisma-client-js"
}

enum ROLE {
    SUPERADMIN
    DOCTOR
    RECEPTIONIST
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  name      String
  lastName  String
  password  String
  role      ROLE
  createdAt DateTime @default(now())
}
