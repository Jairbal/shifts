datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // URL de tu base de datos PostgreSQL
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  role      String  @default("user")
  createdAt DateTime @default(now())
}
